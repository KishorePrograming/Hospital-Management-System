    private void btnlogoutActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnlogoutActionPerformed
        System.gc();
         this.setVisible(false);
         ViewChannel d = new ViewChannel();
         d.id =this.id;
         d.username= this.username;
         d.usertype=this.usertype;
         d.setVisible(true);
    }//GEN-LAST:event_btnlogoutActionPerformed

    private void btnaddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnaddActionPerformed
        if(!txtDeseaseType.getText().equals("")&&!txtDescription.getText().equals("")){
            String prNo = lblPno.getText();
            String chNo = txtChannelNo.getText();
            String desType = txtDeseaseType.getText();
            String desc = txtDescription.getText();
            try {
                String sql = "insert into Prescription(pid, channelid,doctorname,detype,description) values(?,?,?,?,?)";
                pst = con.prepareStatement(sql);
                pst.setString(1, prNo);
                pst.setString(2, chNo);
                pst.setString(3, this.username);
                pst.setString(4, desType);
                pst.setString(5, desc);    
                int count = pst.executeUpdate();
                if(count>0){
                JOptionPane.showMessageDialog(this, "Prescription Generated");
                autoId();
                txtDeseaseType.setText("");
                txtDescription.setText("");
                txtDeseaseType.requestFocus();
                }else{
                JOptionPane.showMessageDialog(this, "Something went wrong..");
                autoId();
                txtDeseaseType.setText("");
                txtDescription.setText("");
                txtDeseaseType.requestFocus();
                }
               } catch (SQLException ex) {
                Logger.getLogger(Patient.class.getName()).log(Level.SEVERE, null, ex);
            }
           
            
        }else{
             JOptionPane.showMessageDialog(this,"Please fill Everything...");
        }
    }//GEN-LAST:event_btnaddActionPerformed

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnClearActionPerformed
                txtDeseaseType.setText("");
                txtDescription.setText("");
                txtDeseaseType.requestFocus();
    }//GEN-LAST:event_btnClearActionPerformed

