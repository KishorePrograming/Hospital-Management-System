    public Prescription(int id, String username, String usertype,Connection con,String chNo,String docName) {
        initComponents();
        this.con=con;
        autoId();
        this.id=id;
        this.username=username;
        this.usertype=usertype;
        lbllogid.setText(Integer.toString(this.id));
        lblusername.setText(username);
        txtChannelNo.setText(chNo);
        txtChannelNo.setEditable(false);
       }
    
    public void autoId(){
        try {
             Statement st = con.createStatement();
             rs = st.executeQuery("select MAX(pid) from Prescription");
             rs.next();            
             rs.getString("MAX(pid)");
             if(rs.getString("MAX(pid)")==null){
                 lblPno.setText("PR001");
             }else{
                 long id = Long.parseLong(rs.getString("MAX(pid)").substring(2, rs.getString("MAX(pid)").length()));
                 id++;
                 lblPno.setText("PR"+String.format("%03d", id));
             }
             
        } catch (SQLException e) {
        }
    }
